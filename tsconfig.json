{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": false,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "paths": {
      "@src/*": ["src/*"],
      "@root/*": ["*"]
    },
		"preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
	"include": [
    "src/**/*"
  ]
}
